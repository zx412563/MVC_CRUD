@model MVC_CRUD.Models.Person

@{
    ViewBag.Title = "Create";
}

<h2>建立帳號</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
           <label class="control-label col-md-2">
               姓名
           </label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.pName, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                @Html.ValidationMessageFor(model => model.pName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">
                年齡
            </label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.pAge, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                @Html.ValidationMessageFor(model => model.pAge, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">
                生日
            </label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.pBirthday, new { htmlAttributes = new { @class = "form-control",type="date", required = "required" } })
                @Html.ValidationMessageFor(model => model.pBirthday, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="建立帳號" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("回上一頁", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
